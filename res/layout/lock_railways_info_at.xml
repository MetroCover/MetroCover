<?xml version="1.0" encoding="utf-8"?>
<metro.k.cover.lock.LockRailwaysLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lock_railways_info_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_list_at"
    android:orientation="horizontal"
    android:padding="10dip" >

    <ImageView
        android:id="@+id/lock_railways_info_icon"
        android:layout_width="28dip"
        android:layout_height="28dip"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_chiyoda" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <metro.k.cover.view.TextViewWithFont
            android:id="@+id/lock_railways_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:textColor="@color/color_white"
            android:textIsSelectable="false"
            android:textSize="20sp" />

        <metro.k.cover.view.TextViewWithFont
            android:id="@+id/lock_railways_info_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:textColor="@color/color_white"
            android:textIsSelectable="false"
            android:textSize="18sp" />
    </LinearLayout>

</metro.k.cover.lock.LockRailwaysLayout>