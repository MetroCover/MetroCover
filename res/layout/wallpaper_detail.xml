<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wallpaer_detail_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/wallpaper_detail_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"
        android:scaleType="center"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/wallpaper_detail_add_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/selector_wallpaper_btn" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_setting_list_item_height" >

        <TextView
            android:id="@+id/wallpaper_detail_titleview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/metro_main_color"
            android:gravity="center"
            android:paddingBottom="18dp"
            android:paddingTop="18dp"
            android:text="@string/lock_screen_image_left"
            android:textColor="#FFF"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/wallpaper_detail_delete_image"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:contentDescription="@string/app_name"
            android:src="@drawable/selector_wallpaper_delete_btn"
            android:visibility="visible" />
    </RelativeLayout>

</RelativeLayout>