<?xml version="1.0" encoding="utf-8"?>
<metro.k.cover.railways.StationLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_list_at"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/list_padding_vartical"
    android:paddingLeft="@dimen/list_padding_hirizontal"
    android:paddingRight="@dimen/list_padding_hirizontal"
    android:paddingTop="@dimen/list_padding_vartical" >

    <ImageView
        android:id="@+id/list_icon_radio_icon"
        android:layout_width="28dip"
        android:layout_height="28dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name" />

    <metro.k.cover.view.TextViewWithFont
        android:id="@+id/list_icon_radio_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:layout_toLeftOf="@+id/list_icon_radio_group"
        android:layout_toRightOf="@+id/list_icon_radio_icon"
        android:textColor="@color/color_title"
        android:textIsSelectable="false"
        android:textSize="20sp"
        android:textStyle="bold" />

</metro.k.cover.railways.StationLayout>