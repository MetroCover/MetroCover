                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/clock_text_color_yurakucho_icon"
                        android:layout_width="28dip"
                        android:layout_height="28dip"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_yurakucho" />

                    <metro.k.cover.view.TextViewWithFont
                        android:id="@+id/clock_text_color_yurakucho_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:text="@string/railway_yurakucho_color"
                        android:textColor="@color/yurakucho_gold"
                        android:textIsSelectable="false"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <metro.k.cover.view.TextViewWithFont
                    android:id="@+id/clock_text_color_yurakucho_selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:text="@string/selected"
                    android:textColor="#ff0000"
                    android:textIsSelectable="false"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="?android:attr/listDivider"
                android:contentDescription="@string/app_name" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>