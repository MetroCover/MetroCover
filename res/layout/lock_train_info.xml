<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp" >

    <LinearLayout
        android:id="@+id/lock_train_info_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_lock_railway_info"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/lock_train_info_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical" >

                <metro.k.cover.view.TextViewWithFont
                    android:id="@+id/lock_train_info_railway"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/color_white"
                    android:textSize="14sp" />

                <metro.k.cover.view.TextViewWithFont
                    android:id="@+id/lock_train_info_station"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/color_white"
                    android:textSize="36sp" />

                <metro.k.cover.view.TextViewWithFont
                    android:id="@+id/lock_train_info_rail_direction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/color_white"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/lock_train_info_icon"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_toLeftOf="@+id/lock_train_info_main"
                android:contentDescription="@string/app_name" />
        </RelativeLayout>

        <View
            android:id="@+id/divider_0"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="20dp"
            android:background="?android:attr/listDivider"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <metro.k.cover.view.TextViewWithFont
                android:id="@+id/lock_train_info_departure_time_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="20sp" />

            <metro.k.cover.view.TextViewWithFont
                android:id="@+id/lock_train_info_train_type_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_white"
                android:textSize="20sp" />
        </LinearLayout>

        <metro.k.cover.view.TextViewWithFont
            android:id="@+id/lock_train_info_remaining_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:textSize="36sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="14dp"
            android:background="?android:attr/listDivider"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <metro.k.cover.view.TextViewWithFont
                android:id="@+id/lock_train_info_departure_time_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="20sp" />

            <metro.k.cover.view.TextViewWithFont
                android:id="@+id/lock_train_info_train_type_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_white"
                android:textSize="20sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="14dp"
            android:background="?android:attr/listDivider"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <metro.k.cover.view.TextViewWithFont
                android:id="@+id/lock_train_info_departure_time_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="20sp" />

            <metro.k.cover.view.TextViewWithFont
                android:id="@+id/lock_train_info_train_type_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_white"
                android:textSize="20sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="14dp"
            android:background="?android:attr/listDivider"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <metro.k.cover.view.TextViewWithFont
                android:id="@+id/lock_train_info_departure_time_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="20sp" />

            <metro.k.cover.view.TextViewWithFont
                android:id="@+id/lock_train_info_train_type_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_white"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <metro.k.cover.circularprogressbar.CircularProgressBar
        android:id="@+id/lock_traininfo_loading"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        app:cpb_color="#FFee44"
        app:cpb_colors="@array/line_colors"
        app:cpb_max_sweep_angle="300"
        app:cpb_min_sweep_angle="10"
        app:cpb_rotation_speed="1.0"
        app:cpb_stroke_width="4dp"
        app:cpb_sweep_speed="1.0" />

</RelativeLayout>