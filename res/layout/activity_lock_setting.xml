<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dip"
        android:layout_marginRight="14dip"
        android:background="#EFEFEF"
        android:orientation="vertical" >

        <!-- タイトル -->

        <TextView
            android:id="@+id/lock_setting_titleview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dip"
            android:paddingLeft="6dip"
            android:paddingTop="15dip"
            android:text="@string/lock_screen"
            android:textColor="#808080"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- System -->

        <LinearLayout
            android:id="@+id/lock_setting_system_security"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_upper_bg_selector"
            android:orientation="vertical"
            android:padding="10dip" >

            <TextView
                android:id="@+id/lock_setting_system_security_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lock_system_security_setting"
                android:textColor="#333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/lock_setting_system_security_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lock_system_security_setting_msg"
                android:textColor="#333"
                android:textIsSelectable="false"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- セパレーター -->

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#CCC"
            android:contentDescription="@string/app_name" />

        <!-- セキュリティ -->

        <LinearLayout
            android:id="@+id/lock_setting_homee_security"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_middle_bg_selector"
            android:orientation="vertical"
            android:padding="10dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lock_security"
                android:textColor="#333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/lock_setting_current_homee_security"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lock_nothing"
                android:textColor="#333"
                android:textIsSelectable="false"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- セパレーター -->

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#CCC"
            android:contentDescription="@string/app_name" />

        <!-- パターンのバイブ -->

        <RelativeLayout
            android:id="@+id/lock_setting_pattern_vibe"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_middle_bg_selector"
            android:padding="10dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/lock_setting_pattern_vibe_checkbox"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lock_patern_vibe"
                    android:textColor="#333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/lock_setting_pattern_current_vibe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/enable"
                    android:textColor="#333"
                    android:textSize="12sp" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/lock_setting_pattern_vibe_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:checked="true" />
        </RelativeLayout>

        <!-- セパレーター -->

        <ImageView
            android:id="@+id/lock_setting_pattern_vibe_sep"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#CCC"
            android:contentDescription="@string/app_name" />

        <!-- パターンロックの軌跡 -->

        <RelativeLayout
            android:id="@+id/lock_setting_pattern_track"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_bottom_bg_selector"
            android:padding="10dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/lock_setting_pattern_track_checkbox"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lock_patern_track"
                    android:textColor="#333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/lock_setting_pattern_current_track"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/enable"
                    android:textColor="#333"
                    android:textSize="12sp" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/lock_setting_pattern_track_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:checked="true" />
        </RelativeLayout>

    </LinearLayout>

</ScrollView>