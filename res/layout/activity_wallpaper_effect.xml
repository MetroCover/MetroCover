<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wallpaper_effect_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_xmas" >

    <metro.k.cover.view.JazzyViewPager
        android:id="@+id/wallpaper_effect_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </metro.k.cover.view.JazzyViewPager>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="2" >

        <metro.k.cover.view.ButtonWithFont
            android:id="@+id/wallpaper_effect_cancel_btn"
            android:layout_width="fill_parent"
            android:layout_height="52dp"
            android:layout_marginRight="0.5dip"
            android:layout_weight="1.0"
            android:background="@drawable/selector_metro_tranceblue"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:text="@string/cancel"
            android:textColor="#FFF"
            android:textStyle="bold" />

        <metro.k.cover.view.ButtonWithFont
            android:id="@+id/wallpaper_effect_comp_btn"
            android:layout_width="fill_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="0.5dip"
            android:layout_weight="1"
            android:background="@drawable/selector_metro_tranceblue"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:text="@string/complete"
            android:textColor="#FFF"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>